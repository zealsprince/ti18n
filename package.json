{
  "name": "@zealsprince/ti18n",
  "version": "2.0.0",
  "description": "Tiny internationalization library for TypeScript/JavaScript with zero dependencies",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup index.ts --format cjs,esm --dts --clean",
    "clean": "rimraf dist",
    "dev": "tsup index.ts --format cjs,esm --dts --watch",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "jest"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "localization",
    "l10n",
    "typescript",
    "javascript"
  ],
  "author": "Andrew Lake",
  "license": "MIT",
  "devDependencies": {
    "@antfu/eslint-config": "^4.1.1",
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "eslint": "^9.19.0",
    "jest": "^29.5.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.2.6",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zealsprince/ti18n.git"
  },
  "bugs": {
    "url": "https://github.com/zealsprince/ti18n/issues"
  },
  "publishConfig": {
    "access": "public"
},
  "homepage": "https://github.com/zealsprince/ti18n#readme"
  
}
